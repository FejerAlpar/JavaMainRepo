
public class sumultipleTwist2 {

	public static void main(String[] args) {
		int a = 1000, b = 0,c=0, i;
		long sum1 = 0, sum2 = 0;
		while (b == 0) {
			for (i = 3; i < a; i++){
				if (i % 3 == 0) {
				sum1 += i;
				} else if (i % 5 == 0) {
					sum2 += i;
				}
			if (sum1 + sum2 >= Integer.MAX_VALUE && c == 0) {
				System.out.println("Int overflow for " + a);
				c++;
			}
			if (sum1 + sum2 < 0) {
				System.out.println("Long overflow for " + a);
				b++;
			}
			}
			a++;
		}
	}
}