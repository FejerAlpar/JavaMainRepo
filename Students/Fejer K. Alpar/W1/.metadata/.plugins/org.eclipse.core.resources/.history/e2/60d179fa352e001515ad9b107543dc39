
public class palindromeTwist {
	public static void main(String[] args) {
		int a = 9999, b, c = 0, p = 1;
		while (c == 0) {
			b = a;
			while (palind(a * b) == 0)
				b--;

			if (a * b > p)
				p = a * b;
			else
				c++;
			a--;
		}
		System.out.println(a*a);
		System.out.println(Integer.MAX_VALUE);
		System.out.println("Largest palindrome made from the product of 2 4-digit numbers is "+p);
	}

	public static int palind(int a) {
		int b = 0, c = a;
		while (c != 0) {
			b = b * 10 + c % 10;
			c = c / 10;
		}
		if (a == b)
			return 1;
		else
			return 0;
	}
}