
public class sumultipleTwist2 {

	public static void main(String[] args) {
		int b = 0, c = 0, i;
		long a = 1000, sum = 0;
		while (b == 0) {
			for (i = 3; i < a; i++) {
				if (i % 3 == 0 || i % 5 == 0) {

					sum += i;
					if (sum >= Integer.MAX_VALUE && c == 0) {
						System.out.println("Int overflow for " + a);
						c++;

					}
					if (sum < 0) {

						System.out.println("Long overflow for " + a);
						b++;
					}
				}
			}
			a++;
		}
	}
}