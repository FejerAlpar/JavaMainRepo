
public class sumultipleTwist2 {

	public static void main(String[] args) {
		int a = 1000, b = 0, i, sumInt1 = 0, sumInt2 = 0;
		long sumLong1 = 0, sumLong2 = 0;
		while (b == 0) {
			for (i = 3; i < a; i++)
				if (i % 3 == 0) {
					sumInt1 += i;
					sumLong1 += i;
				} else if (i % 5 == 0) {
					sumInt2 += i;
					sumLong2 += i;
					if (sumInt1 + sumInt2 >= Integer.MAX_VALUE) {
						System.out.println("Int overflow for " + a);
					}
					if (sumLong1 + sumLong2 > Long.MAX_VALUE) {
						System.out.println("Long overflow for " + a);
						b++;
					}
				}
			a++;
		}
	}
}